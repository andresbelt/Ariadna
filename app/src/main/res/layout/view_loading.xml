<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.oncreate.ariadna.UI.views.MaterialProgressBar
        android:id="@id/loading_view_progressbar"
        android:layout_width="56dp"
        android:layout_height="56dp" />

    <TextView
        android:id="@id/loading_view_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/no_internet_connection_message"
        android:textIsSelectable="true"
        android:textSize="18sp" />

    <Button
        android:id="@+id/loading_view_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_retry" />
</LinearLayout>
