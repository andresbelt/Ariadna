<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="@drawable/list_selector"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/module_horizontal_padding"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/certificate_icon"
            android:layout_width="@dimen/module_certificate_width"
            android:layout_height="@dimen/module_icon_size"
            android:layout_gravity="center"
            android:scaleType="fitEnd"
            android:src="@drawable/certificate_unlocked" />

        <TextView
            android:id="@id/module_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="@string/module_certificate"
            android:textSize="@dimen/module_text_size" />
    </LinearLayout>
</FrameLayout>
